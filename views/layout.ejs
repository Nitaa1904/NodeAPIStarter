<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title ? title : "Dashboard" %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 text-teal-900">
    <!-- Container -->
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-teal-700 text-white p-6 shadow-lg">
        <h4 class="text-2xl font-extrabold mb-6">ðŸŒŸ Admin Dashboard</h4>
        <nav class="flex flex-col space-y-4">
          <a
            href="/dashboard/admin"
            class="flex items-center space-x-2 p-2 rounded-lg hover:bg-teal-600 transition"
          >
            <i class="fas fa-home"></i> <span>Dashboard</span>
          </a>
          <a
            href="/dashboard/admin/users"
            class="flex items-center space-x-2 p-2 rounded-lg hover:bg-teal-600 transition"
          >
            <i class="fas fa-users"></i> <span>View Users</span>
          </a>
          <a
            href="/admin/users/create"
            class="flex items-center space-x-2 p-2 rounded-lg hover:bg-teal-600 transition"
          >
            <i class="fas fa-user-plus"></i> <span>Create User</span>
          </a>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <div class="bg-white p-6 rounded-lg shadow-md shadow-teal-900/30">
          <%- body %>
        </div>
      </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
  </body>
</html>
